{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2016,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "space-before-function-paren": ["error", "always"],
        "no-console": [
            "error",
            {
                "allow": [
                    "warn", "error", "log"
                ]
            }
        ]
    },
    "globals": {
        "Vue": true
    }
}
